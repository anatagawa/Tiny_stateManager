{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "command": "c:/raylib/w64devkit/bin/mingw32-make.exe",
            "args": [
                "clean",
                "PROJECT_NAME=${workspaceFolderBasename}"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Play",
            "type": "shell",
            "command": "c:/raylib/w64devkit/bin/mingw32-make.exe",
            "args": [
                "play",
                "PROJECT_NAME=${workspaceFolderBasename}"
            ],
            "group": "build",
        },
        {
            "label": "(WIN) build release",
            "type": "shell",
            "command": "c:/raylib/w64devkit/bin/mingw32-make.exe",
            "args": [
                "PROJECT_NAME=${workspaceFolderBasename}"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "(WIN) build debug",
            "type": "process",
            "command": "c:/raylib/w64devkit/bin/mingw32-make.exe",
            "args": [
                "PROJECT_NAME=${workspaceFolderBasename}",
                "DEBUGGING=TRUE"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
